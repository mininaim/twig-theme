<header role="banner">
  {# {{ template_for_store_messages }} #}
	{% include 'template_for_store_messages' %}

	{% include 'alert.twig' with { 'ab_settings' : settings } %}
	{% include 'progressbar.twig' %}
	{% include 'navbar.twig' with { 'navbar_settings' : settings } %}
	{% include 'navigation.twig' with { 'navigation_settings' : settings } %}

</header>

{# offcanvas #}
{% include 'offcanvas-cart.twig' %}
{# {% if app.request.headers.get('User-Agent') matches '/mobile|android/i' %}
 {% endif %} #}
{% include 'offcanvas-mobile-sidemenu.twig' with { 
      'navbar_settings': settings,
      'navigation_settings': settings
} %}

{% include 'offcanvas-internationalization.twig' with { 'offcanvasInternationalization' : settings } %}

<script>
	var navbarGreetingDataTemplate = {
    	greeting_morning: '{{locals.greeting_morning}}',
		greeting_afternoon: '{{locals.greeting_afternoon}}',
		greeting_evening: '{{locals.greeting_evening}}',
	};
</script>
<script src="{{ assetUrl('header.js') }}"></script>

