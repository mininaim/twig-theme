 {% if settings.store_partners %}
 
 <section section-id="{{ sectionId }}" class="py-4 p-sm-5 border-top border-secondary border-opacity-10 css-partners">
	<div class="container">
		<div class="d-flex mb-2 mb-sm-3">
			<div class="flex-grow-1">
				<h2 class="h5 py-0 py-sm-2 fw-bold">
					{{ settings.title }}
				</h2>
			</div>
		</div>
    <div class="position-relative mt-0 mt-sm-3 z-1">
        {% if settings.store_partners | length == 1 %}
            <div class="d-flex justify-content-center">
                {% for key, store_partner in settings.store_partners %}
                    <img src="{{ imageUrl(store_partner.image, { w: 250, q: 100, f: 'auto' }) }}" alt="" class="img-fluid !card-img-top">
                {% endfor %}
            </div>
        {% else %}
            <div class="swiper partnersSwiper">
                <div class="swiper-wrapper css-mode-toggle-wrapper">
                    {% for key, store_partner in settings.store_partners %}
                        <div class="swiper-slide p-5 p-sm-4 mb-3 mb-sm-3 rounded card border-0 h-100">
                            <img src="{{ imageUrl(store_partner.image, { w: 250, q: 100, f: 'auto' }) }}" alt="" class="img-fluid card-img-top">
                        </div>
                    {% endfor %}
                </div>
            </div>
            <hr class="mt-3 mt-sm-5 border-0">
            {% if settings.hide_dots == false %}
                <div class="swiper-pagination swiper-pagination-sm"></div>
            {% endif %}
        {% endif %}
    </div>

	</div>
</section>
{% endif %}

{% schema %}
{
  "name": {
    "ar": "الشركاء",
    "en": "Partners"
  },
  "icon": "fal fa-sparkles",
  "display": true,
  "settings": {
    "title": {
      "type": "text",
      "label": {
        "ar": "العنوان",
        "en": "Title"
      }
    },
    "store_partners": {
      "type": "list",
      "noLabel": true,
      "maxItems": 20,
      "info": {
        "ar": "",
        "en": "This is an info text sample here"
      },
      "settings_label": {
        "ar": "الصورة",
        "en": "Picture"
      },
      "settings": {
        "image": {
          "type": "image",
          "label": {
            "ar": "الصورة",
            "en": "Image"
          },
          "info": {
            "ar": "فضلا، ارفع صورة بحجم 250*250 بكسل",
            "en": "Please upload an image with a size of 250*250 pixels"
          }
        }
      }
    },
    "hide_dots": {
      "type": "checkbox",
      "label": {
        "ar": " ",
        "en": " "
      },
      "option": {
        "ar": "إخفاء النقاط",
        "en": "Hide Dots"
      },
      "noLabel": true
    }
  }
}
{% endschema %}
