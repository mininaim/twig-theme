{% extends "layout.twig" %}

{% block header %}
	{{ include('header.twig') }}
{% endblock %}

{% block main_content %}
	<section class="bg-primary text-center py-5">
		<div class="container">
			<div class="row">
				<div class="col">
					<h1 class="text-white">
						{{ locals.faqs_heading}}
					</h1>
					<div class="d-flex justify-content-center align-items-center"></div>
				</div>
			</div>
		</div>
	</section>
	{% if faqs is not empty %}
	<section class="py-3 py-md-3">
		<div class="container">
			<div class="row">
				<div class="col-12 z-1">
					<div class="accordion">
						{% for faq in faqs %}
							<div class="accordion-item">
								<h2 class="accordion-header" id="heading{{faq.id}}">
									<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{faq.id}}" aria-expanded="true" aria-controls="collapse{{faq.id}}">
										{{faq.question}}
									</button>
								</h2>
								<div id="collapse{{faq.id}}" class="accordion-collapse collapse" aria-labelledby="heading{{faq.id}}" data-bs-parent="#faqsList">
									<div class="accordion-body text-muted">
										{{ faq.answer | raw }}
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</section>
	{% endif %}
{% endblock %}

{% block footer %}
	{{ include('footer.twig') }}
{% endblock %}

{% block footer_scripts %}
	<script defer src="{{ assetUrl('faqs.js') }}"></script>
{% endblock %}
