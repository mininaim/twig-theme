																<span class="spinner-border spinner-border-sm d-none js-add-to-cart-progress" role="status" aria-hidden="true">
																	<span class="visually-hidden">
																		{{ locals.accessibility.spinner.label}}
																	</span>
																</span>
																<span class="js-shopping-cart">
																	<i class="ti ti-shopping-bag" aria-hidden="true"></i>
																</span>
																<span class="px-1">{{ locals.add_to_cart }}</span>
															</button>

															
														</div>

														<div class="card border-0 col-12 col-sm-3 col-lg-auto mx-auto d-none animate__animated animate__jackInTheBox js-cart-total-price-fixed">
															<a href="/cart/view" class="btn btn-lg btn-outline-secondary js-button-checkout">
																<span class="visually-hidden">{{ locals.offcanvasCart.footer.checkout }}</span>
																<i class="ti ti-basket align-baseline animate__animated animate__delay-1s" aria-hidden="true"></i>
																<span class="px-2 fw-bold js-cart-total-price-stirng"></span>
															</a>
														</div>


													</div>
												</form>

