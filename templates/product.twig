																<button class="btn btn-link link-secondary text-decoration-none js-product-quantity-increase" type="button" onclick="increaseQuantity()">
																	<i class="ti ti-plus align-middle fs-4" aria-hidden="true"></i>
																	<span class="visually-hidden">{{ locals.increase_quantity }}</span>
																	
																</button>
															</div>
														</div>

