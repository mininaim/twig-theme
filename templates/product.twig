        var productImages = {{ product.selected_product.images | json_encode() | raw }};

		// ToDo: To rewrite the two functions
        function productOptionsChanged(selected_product) {
			if (selected_product) {
				$("#product-id").val(selected_product.id);
				$(".js-send-notify-product-id").val(selected_product.id);

				if (!selected_product.unavailable) {
				if (selected_product.formatted_sale_price) {
					$(".js-product-old-price").removeClass("d-none");
					$(".js-product-discount-value").removeClass("d-none");

					$(".js-product-price").html(selected_product.formatted_sale_price);
					$(".js-product-old-price").html(selected_product.formatted_price);
					$(".js-product-discount-value").html(
					"{{ locals.product_discount }}" +
						" " +
						selected_product.discount_percentage +
						"%"
					);
				} else {
					$(".js-product-old-price").addClass("d-none");
					$(".js-product-discount-value").addClass("d-none");

					$(".js-product-price").html(selected_product.formatted_price);
					$(".js-product-old-price").html("");
					$(".js-product-discount-value").html("");
				}

				if (selected_product.weight.value) {
					$(".js-product-weight-section").removeClass("d-none");
					$(".js-product-weight-value").html(
					selected_product.weight.value + " " + selected_product.weight.unit
					);
				} else {
					$(".js-product-weight-section").addClass("d-none");
				}

				if (selected_product.sku) {
					$(".js-product-sku-section").removeClass("d-none");
					$(".js-product-sku-value").html(selected_product.sku);
					$(".js-product-sku-value .sku-clipboard").attr(
					"data-clipboard-text",
					"" + selected_product.sku
					);
				} else {
					$(".js-product-sku-section").addClass("d-none");
				}

				{% if store.is_low_stock_label_enabled %}
				var store_low_stock_limit = {{ store.low_stock_quantity_limit }};
				var low_stock_message = '{{ locals.product_cart_quantity_low_stock }}';
				
				if(!selected_product.is_infinite &&  selected_product.quantity < store_low_stock_limit){
					$('.low-quantity-section').addClass('d-inline-block');
					$('.low-quantity-section .low-quantity').html(low_stock_message.replace('%s', selected_product.quantity))
				}else{
					$('.low-quantity-section').addClass('none');
				}
				{% endif %}

				$(".js-section-out-of-stock").addClass("d-none");
				$(".js-section-add-to-cart").removeClass("d-none");

				$(".js-product-price").addClass("animate__animated animate__zoomIn");
				setTimeout(function () {
					$(".js-product-price").removeClass("animate__animated animate__zoomIn");
				}, 1000);
				updateProductImages(selected_product);

				} else {
					console.log('else function');
					updateProductImages(selected_product);
				$(".js-section-out-of-stock").removeClass("d-none");
				$(".js-section-add-to-cart").addClass("d-none");
				}
			} else {
				$(".js-section-out-of-stock").removeClass("d-none");
				$(".js-section-add-to-cart").removeClass("d-none");

				$(".js-section-add-to-cart").html("{{ locals.error_item_unavailable }}");
			}
			updateProductImages(selected_product);

        }
		function updateProductImages(selected_product) {
            if(selected_product.images && selected_product.images.length > 0){
                productImages = selected_product.images;
                $('#pills-slider .swiper-wrapper').html('');
                for(var z = 0; z < productImages.length; z++){
                    var prImage = productImages[z];
					$('#pills-slider .swiper-wrapper').append(`	<div class="swiper-slide position-relative">
						<img class="swiper-slide-image swiper-carousel-animate-opacity swiper-lazy object-fit-contain" data-swiper-parallax="10%"
						src="${ prImage.image.full_size }" alt="${ selected_product.name }">
						<a href="${ prImage.image.full_size }" class="glightbox" data-gallery="product-gallery" style="cursor: zoom-in;">
							<i class="d-inline-block border border-3 border-opacity-25 rounded border-primary rounded-pill p-1 ti ti-zoom-pan mt-3 top-0 end-0 position-absolute text-primary fs-3 translate-middle-x"></i>
						</a>
						<div class="swiper-lazy-preloader"></div>
					</div>`);
                }
				initSwiper();
				$('.swiper-lazy-preloader').hide();
            }else{
                $('.product-images-carousel').addClass('d-none');
                $('.product-images-carousel-thumbs').addClass('d-none-important');
                $('.product-images-empty').removeClass('d-none');
            }
        }
		{# async function updateProductImages(selectedProduct) {
		const productImages = selectedProduct.images;
		const sliderWrapper = $('#pills-slider .swiper-wrapper');
