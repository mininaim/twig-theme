{% extends "layout.twig" %}

{% block header %} 
    {{ include('header.twig') }} 
{% endblock %}

{% block css_files_inner %}
	<link rel="stylesheet" href="{{ assetUrl('glightbox.min.css') }}">
	<link rel="stylesheet" href="{{ assetUrl('swiper.gallery.css') }}">
{% endblock %} 
{% block js_files_inner %}
	<script src="{{ assetUrl('countUp.js') }}"></script>
	<script defer src="{{ assetUrl('moment.min.js') }}"></script>
	<script defer src="{{ assetUrl('moment.ar.min.js') }}"></script>
{% endblock %} 

{% block main_content %}
	{# {% if product.description == true or product.has_variants == true or store.is_product_reviews_enabled == true %} #}

	<section class="py-3 js-details-section" id="js-details-id">
			<div class="container">
				<div class="row">
					<div class="col">
						<ul class="nav nav-tabs" id="nav-tab" role="tablist">
							<li class="nav-item">
								<a class="nav-link active" id="nav-slider-tab" data-bs-toggle="tab" data-bs-target="#nav-slider" type="button" role="tab" aria-controls="nav-slider" aria-selected="true">
									{{ locals.product_slider }}
								</a>
							</li>
							{% if product.description %}
								<li class="nav-item">
									<a class="nav-link" id="nav-product-tab" data-bs-toggle="tab" data-bs-target="#nav-product" type="button" role="tab" aria-controls="nav-product" aria-selected="false">{{ locals.product_description }}</a>
								</li>
							{% endif %}
							{% if product.has_variants %}
								<li class="nav-item">
									<a class="nav-link {% if product.description is empty %}{% endif %}" id="nav-settings-tab" data-bs-toggle="tab" data-bs-target="#nav-settings" type="button" role="tab" aria-controls="nav-settings" aria-selected="false">{{ locals.product_options }}</a>
								</li>
							{% endif %}
							{% if store.is_product_reviews_enabled %}
								<li class="nav-item">
									<a class="nav-link {% if product.description is empty and not product.has_variants %}{% endif %}" id="nav-reviews-tab" data-bs-toggle="tab" data-bs-target="#nav-reviews" type="button" role="tab" aria-controls="nav-reviews" aria-selected="false">
										{{ locals.product_reviews }} 
										{# <span class="badge text-bg-primary rounded-pill ms-auto">{{ product.rating.total_count }}</span> #}
									</a>
								</li>
							{% endif %}
						</ul>
						<div class="tab-content" id="nav-tabContent">
							<div class="tab-pane fade show active" id="nav-slider" role="tabpanel" aria-labelledby="nav-slider-tab" tabindex="0">
								<div class="py-3 js-product-page" id="productId">
									<div class="container g-0">
										<div class="row d-flex align-items-start">
											<div class="order-1 order-lg-0 col-12 col-lg-6">
												<div class="card mb-3 border-secondary border-opacity-10 shadow-sm">
													<div class="card-header border-secondary border-opacity-10 d-flex flex-wrap-reverse justify-content-between align-items-start gap-2 p-3">
														<h5 class="mb-0 lh-base mt-2 mt-sm-0">
															{{ product.name }}
														</h5>
													 <div class="btn-group btn-group-sm" role="group" aria-label="{{ locals. accessibility.radio_group.label }}">
															{# <button type="button" class="btn btn-outline-primary js-fav-button" data-product-id="{{ product.id }}">
																<i class="ti ti-loader invisible align-middle" aria-hidden="true" data-bs-placement="top" data-bs-html="true" data-bs-toggle="tooltip" data-bs-offset="1,0"></i>
																<span class="visually-hidden">{{ locals.product_fav_label }}</span>
															</button>
															#}
															<div class="btn-group btn-group-sm" role="group">
																<button type="button" class="btn btn-outline-primary" id="qrCode">
																	<i class="ti ti-qrcode align-middle" aria-hidden="true" data-bs-placement="top" data-bs-html="true" data-bs-toggle="tooltip" data-bs-title="{{ locals.shareQrCode}}" data-bs-offset="0,10"></i>
																	<span class="visually-hidden">{{ locals.shareQrCode }}</span>
																</button> 
																<button class="btn btn-outline-primary rounded-end !dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
																	<i class="ti ti-share align-middle fs-6" aria-hidden="true" aria-pressed="false" data-bs-placement="top" data-bs-html="true" data-bs-toggle="tooltip" data-bs-title="{{ locals.product_share_label}}" data-bs-offset="0,10"></i>
																	<span class="visually-hidden">{{ locals.product_share_label }}</span>
																</button>
																<ul class="dropdown-menu dropdown-menu-lg-end shadow-lg border-0 rounded rounded-3">
																	<li>
																		<a class="dropdown-item py-2 animated slideIn" target="_blank" href="http://api.whatsapp.com/send?text={{ product.name }}%20{{ product.html_url }}">
																			<i class="ti ti-brand-whatsapp align-middle fs-6" aria-hidden="true"></i>
																			<span class="px-1">{{ locals.shareWhatsapp }}</span>
																		</a>
																	</li>
																	<li>
																		<a class="dropdown-item py-2 animated slideIn" target="_blank" href="http://t.me/share/url?url={{ product.html_url }}&amp;text={{ product.name }}">
																			<i class="ti ti-brand-telegram align-middle fs-6" aria-hidden="true"></i>
																			<span class="px-1">{{ locals.shareTelegram }}</span>
																		</a>
																	</li>
																	<li>
																		<a class="dropdown-item py-2 animated slideIn" target="_blank" href="http://www.facebook.com/sharer/sharer.php?u={{ product.html_url }}">
																			<i class="ti ti-brand-facebook align-middle fs-6" aria-hidden="true"></i>
																			<span class="px-1">
																				{{ locals.shareFacebook }}</span>
																		</a>
																	</li>
																	<li>
																		<a class="dropdown-item py-2 animated slideIn" target="_blank" href="http://twitter.com/intent/tweet?text={{ product.name }}&amp;url={{ product.html_url }}">
																			<i class="ti ti-brand-twitter align-middle fs-6" aria-hidden="true"></i>
																			<span class="px-1">{{ locals.shareTwitter }}</span>
																		</a>
																	</li>
																	<li>
																		<hr class="dropdown-divider border-secondary border-opacity-10">
																	</li>
																	<li>
																		<a class="dropdown-item py-2 animated slideIn" target="_blank" href="mailto:?subject={{ product.name }}&amp;body={{ product.html_url }}">
																			<i class="ti ti-at align-middle fs-6" aria-hidden="true"></i>
																			<span class="px-1">{{ locals.shareMail }}</span>
																		</a>
																	</li>
																	{# <li>
																		<button type="button" class="dropdown-item py-2 animated slideIn" id="qrCode">
																			<i class="ti ti-qrcode align-middle fs-6" aria-hidden="true"></i>
																			<span class="px-1">{{ locals.shareQrCode }}</span>
																		</button>
																	</li> #}
																</ul>
															</div>
														</div> 
													</div>
													{% if product.sold_products_count  == true or product.low_stock_quantity == true or product.bundle_offer == true %}
														<div class="d-flex flex-wrap justify-content-start align-items-start fl bg-body-subtle rounded-bottom gap-2 gap-sm-3 p-3 py-sm-2 px-sm-3 text-secondary-emphasis">
															{% if product.sold_products_count %}
																<span class="small animate__animated animate__fadeIn">
																	<i class="ti ti-comet fs-6 align-middle !text-warning" aria-hidden="true"></i>
																	<span class="px-sm-1">
																		{% if product.sold_products_count == 1 %}
																			{{ locals.product_sold_more_than_x_times.one | format(product.sold_products_count) }}
																		{% else %}
																			{{ locals.product_sold_more_than_x_times.other | format(product.sold_products_count) }}
																		{% endif %}
																	</span>
																</span>
															{% endif %}
															{% if product.low_stock_quantity %}
																{# <span class="vr"></span> #}
																<span class="small animate__animated animate__fadeIn">
																	<i class="ti ti-ballon fs-6 align-middle !text-danger" aria-hidden="true"></i>
																	<span class="px-sm-1">
																		{{ locals.product_cart_quantity_low_stock | format(product.low_stock_quantity) }}
																	</span>
																</span>
															{% endif %}
															{% if product.bundle_offer %}
																{# <span class="vr"></span> #}
																<span class="small animate__animated animate__fadeIn">
																	<i class="ti ti-gift-card fs-6 align-middle" aria-hidden="true"></i>
																	<span class="px-sm-1 float-end">
																		{{ product.bundle_offer.name }}
																	</span>
																</span>
															{% endif %}

																 {% if not product.is_taxable %}
																
																	<span class="small animate__animated animate__fadeIn">
																		<i class="ti ti-rubber-stamp fs-6 align-middle" aria-hidden="true"></i>
																		<span class="px-sm-1">
																			{{ locals.product_is_not_taxable }}
																		</span>
																	</span>
															
																{% endif %}

														</div>
													{% endif %}
												</div>
												{% if product.selected_product.out_of_stock == false %}

												<div class="spinner-border spinner-border-sm text-primary js-product-deals-spinner mb-2" role="status">
																		<span class="visually-hidden">
																			{{ locals.accessibility.spinner.label }}
																		</span>
																	</div>

													 <div class="js-product-deals-template" style="display: none;"> 
													<div class="card border-0 mb-3 p-0">
												
																	
													

														
												
														<div class="d-flex flex-wrap justify-content-between gap-3 animate__animated animate__fadeIn text-secondary-emphasis">
															{# <span class="vstack gap-0 p-3 border rounded border-secondary border-opacity-10 shadow-sm">
																
																<!-- <i class="ti ti-eye-check fs-5 align-middle" aria-hidden="true"></i> -->
																<span class="fw-bold text-primary-emphasis">
																	<span class="js-views-count"></span>
																	{{ locals.product_people_prefix }}
																</span>
																<span>{{ locals.product_people_views }} </span>
																
															</span> #}

															{% if product.bundle_offer %}
														
															{# <span class="vstack gap-0 p-3 border rounded border-secondary border-opacity-10 shadow-sm">
																 <i class="ti ti-ballon fs-5 align-middle" aria-hidden="true"></i> 
																<span class="fw-bold text-primary-emphasis js-product-timer"></span>
																<span>{{ locals.product_offer_expire }} </span>
															</span> #}
															{% endif %}
														</div>
													</div>
													</div>
												{% endif %}
												<div class="card border-0 p-0 mb-3 shadow-sm">
													<ul class="list-group">
														<li class="list-group-item d-flex justify-content-between align-items-center border-secondary border-opacity-10 px-3">
															<div class="me-auto">
																<div class="fw-bold">{{ locals.product_price }}</div>
																<small class="text-secondary text-decoration-line-through js-product-old-price{% if product.selected_product.formatted_sale_price is empty %} d-none{% endif %}">
																	{{ product.selected_product.formatted_price }}
																</small>
																<sup class="badge bg-primary text-primary bg-opacity-25 ms-2 js-product-discount-value{% if product.selected_product.formatted_sale_price is empty %} d-none{% endif %}">
																	{{ locals.product_discount }}
																	{{ product.discount_percentage }}%
																</sup>
															</div>
															{% if product.selected_product.formatted_sale_price %}
																<span class="badge bg-primary bg-opacity-10 text-primary rounded-pill fs-5 js-product-price">{{ product.selected_product.formatted_sale_price }}</span>
															{% else %}
																<span class="badge bg-primary bg-opacity-10 text-primary rounded-pill fs-5 js-product-price">{{ product.selected_product.formatted_price }}</span>
															{% endif %}
														</li>
														<li class="list-group-item d-flex justify-content-between align-items-center border-secondary border-opacity-10 px-3 js-product-sku-section{% if product.selected_product.sku is empty %} d-none{% endif %}">
															<div class="me-auto">
																<div class="fw-bold">{{ locals.product_sku }}</div>
															</div>
															<span class="badge border-0 border-secondary border-opacity-10 !fw-light !bg-body-tertiary text-secondary rounded-pill !fs-6 d-flex align-items-center gap-1 flex-row-reverse text-truncate">
																<span class="btn-clipboard sku-clipboard fs-5" data-clipboard-text="{{ product.selected_product.sku }}">
																	<i title="{{ locals.copy }}" class="ti ti-link align-middle fs-6" aria-hidden="true"></i>
																</span>
																<small class="fs-6 js-product-sku-value">{{ product.selected_product.sku }}</small>
															</sp>
														</li>
														{% if product.selected_product.weight.value > 0 %}
															<li class="list-group-item d-flex justify-content-between align-items-center border-secondary border-opacity-10 px-3 js-product-weight-section{% if product.selected_product.weight.value is empty %} d-none{% endif %}">
																<div class="me-auto">
																	<div class="fw-bold">{{ locals.product_weight }}</div>
																</div>
																<span class="badge border-0 border-secondary border-opacity-10 !fw-light !bg-body-tertiary text-secondary rounded-pill ltr fs-6 js-product-weight-value">{{ product.selected_product.weight.value }}
																	{{ product.selected_product.weight.unit }}</span>
															</li>
														{% endif %}
														{% if product.rating %}
															<li class="list-group-item d-flex justify-content-between border-secondary border-opacity-10 align-items-center px-3">
																<div class="me-auto">
																	<div class="fw-bold">{{ locals.product_reviews }}</div>
																</div>
																<div class="badge text-warning border-0 border-secondary border-opacity-10 rounded-pill" data-bs-placement="left" data-bs-html="true" data-bs-toggle="tooltip" data-bs-title="<small>{{ locals.product.total_reviews}} ({{ product.rating.total_count }}) {{ locals.product.total_reviews_suffix}} </small>" data-bs-offset="0,5">
																	{% include 'product-rating.twig' with {'rating' : product.rating.average } %}
																	{# <span class="text-muted">({{ product.rating.total_count }})</span> #}
																</div>
															</li>
														{% endif %}

														{% if product.categories|length > 0 %}
														<li class="list-group-item d-flex flex-sm-row flex-column justify-content-between align-items-center border-secondary border-opacity-10 px-3">
															
																<div class="me-auto">
																	<div class="fw-bold">{{ locals.product_tags }}</div>
																</div>
																<div class="my-2 d-flex flex-sm-row flex-wrap justify-content-sm-end gap-2 px-sm-2">
																	{% for category in product.categories %}
																		<a href="/categories/{{ category.id }}/{{ category.slug }}" class="link-primary text-decoration-underline small">
																			
																				<i class="ti ti-tag align-middle" aria-hidden="true"></i>
																				{{ category.name }}
																		
																		</a>
																	{% endfor %}
																</div>
															
														</li>
														{% endif %}
													{% if product.selected_product.out_of_stock == false %}
														{% if store.payment_methods|length > 0 %}
															<li class="list-group-item d-flex flex-sm-row flex-column justify-content-between align-items-center border-secondary border-opacity-10 px-3">
																<div class="me-auto">
																	<div class="fw-bold">{{ locals.product_shipping_options }}</div>
																</div>
																<div class="my-2 d-flex flex-sm-row flex-wrap justify-content-sm-end gap-2 px-sm-2 !css-mode-toggle-wrapper">
																	{% for paymentMethod in store.payment_methods %}
																		<span class="text-capitalize badge fw-light rounde-pill small border border-secondary border-opacity-10 text-secondary-emphasis">
																		<img loading="lazy" src="{{ imageUrl(paymentMethod.icon,{ h:60, q: 100 }) }}" alt="{{ session.lang.code == 'ar' ? paymentMethod.name : paymentMethod.name }}" style="height:15px" class="img-fluid object-fit-scale js-shipping-icon"> 
																		{# {{ paymentMethod.name }} #}
																		</span>

																	{% endfor %}
																</div>
															
														  </li>
														  {% endif %}
														 
													{% endif %}

													</ul>
												</div>
												{% if product.short_description is not empty %}
													<div class="card border-secondary border-opacity-10 shadow-sm my-3 z-1">
														<div class="card-header border-secondary border-opacity-10 text-body fw-bold">
															{{ locals.product_description_heading }}
														</div>
														<div class="card-body text-body-emphasis">
															{{ product.short_description | raw }}
															<a data-scroll href="#js-details-id" class="link-secondary text-decoration-underline" hidden>
																{{ locals.product_description_more }}
															</a>
														</div>
													</div>
												{% endif %}

												<div class="card border-0 mt-3 text-body animate__animated animate__flipInX animate__delay-1s">
													{{ template_for_product_payments_widget }}
												</div>

												<form id="product-form" class="{% if product.selected_product.out_of_stock %}d-none{% else %}d-block justify-content-center align-items-center gap-5{% endif %}">
													<input id="product-id" type="hidden" value="{{ product.selected_product.id }}">
													{% if product.has_variants or product.has_custom_input_fields %}
														<div class="card my-3 border-0 border-secondary border-opacity-10">
															{% if product.has_variants %}
																<div class="card-header bg-transparent border-0 p-0 js-custom-variants">
																	<div class="spinner-border spinner-border-sm text-primary js-product-variants-spinner" role="status">
																		<span class="visually-hidden">
																			{{ locals.accessibility.spinner.label }}
																		</span>
																	</div>
																	<div class="js-product-variants-template" style="display: none;">
																		{{ template_for_product_variants_dropdown }}
																	</div>
																</div>
															{% endif %}
															{% if product.has_custom_input_fields %}
																<div class="card-body overflow-hidden border border-secondary border-opacity-10 !mt-3 rounded bg-transparent js-custom-fields">
																	<div class="spinner-border spinner-border-sm text-primary js-product-custom-input-spinner" role="status">
																		<span class="visually-hidden">
																			{{ locals.accessibility.spinner.label }}
																		</span>
																	</div>
																	<div class="js-product-custom-input-template" style="display: none;">
																		{{ template_for_product_custom_input_fields }}
																	</div>
																</div>
															{% endif %}
														</div>
													{% endif %}
