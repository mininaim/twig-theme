														<button class="btn btn-primary border-start-0 rounded-0 rounded-end" disabled type="button" id="ApplyEmailNotification" onclick="sendProductNotifyMe()">
															<span class="px-1">{{ locals.send }}</span>
															<span class="spinner-border spinner-border-sm text-white d-none js-send-notify-progress" role="status">
																<span class="visually-hidden">
																	{{ locals.accessibility.spinner.label }}
																</span>
															</span>
														</button>
													</div>
												</div>

											</div>
